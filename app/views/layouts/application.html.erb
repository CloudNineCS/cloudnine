<!DOCTYPE html>
<html>
<head>
  <title>Cloudnine</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="https://fonts.googleapis.com/css?family=Open+Sans+Condensed:300|Poiret+One" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Open+Sans+Condensed:300" rel="stylesheet">
</head>
<body>
<nav class="wrapper">
  <nav role="navigation" class="navbar navbar-default" >
      <% if user_signed_in? %>
        <nav class="navbar navbar-default">
          <ul class="nav navbar-nav" style="float: left">
            <li class="nav-button col-md-1 col-sm-3" ><%= link_to 'Отзывы', comments_path %></li>
            <li class="nav-button col-md-1 col-sm-3" ><%= link_to 'Заказы', works_path %></li>
            <li class="nav-button col-md-1 col-sm-3" ><%= link_to 'Проекты', new_project_path %></li>
          </ul>
          <ul class="nav navbar-nav out-button" style="padding-top: 5px; margin-right: 20px"><%= link_to 'Выход', destroy_user_session_path, :method => :delete%></ul>
        </nav>
    <% end %>

    <div class="container">
      <ul class="nav navbar-nav">
        <%= image_tag("logo.png", width: '360px', class: 'logo') %>
      </ul>
      <ul class="nav navbar-nav">
        <li class="nav-button col-md-1 col-sm-3" ><%= link_to 'Проекты', projects_path %></li>
        <li class="nav-button col-md-1 col-sm-3" ><%= link_to 'Контакты', contact_path %></li>
        <li class="nav-button col-md-1 col-sm-3" ><%= link_to 'О нас', about_path %></li>
      </ul>
    </div>
  </nav>
</nav>
  <div class="content">
    <%= yield %>
  </div>
</div>
</body>
</html>
