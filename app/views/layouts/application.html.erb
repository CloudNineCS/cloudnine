<!DOCTYPE html>
<html>
<head>
  <title>Cloudnine</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="https://fonts.googleapis.com/css?family=Open+Sans+Condensed:300|Poiret+One" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Open+Sans+Condensed:300" rel="stylesheet">
</head>
<body>
<div class="wrapper">
  <nav role="navigation" class="navbar navbar-default" >
    <div class="container">
      <% if user_signed_in? %>
        <ul class="nav navbar-nav">
          <li class="nav-button col-md-1 col-sm-3" ><%= link_to 'Пользователи', root_path  %></li>
          <li class="nav-button col-md-1 col-sm-3" ><%= link_to 'Отзывы', root_path %></li>
          <li class="nav-button col-md-1 col-sm-3" ><%= link_to 'Заказы', root_path %></li>
          <li class="nav-button col-md-1 col-sm-3" ><%= link_to 'Проекты', root_path %></li>
        </ul>
      <% end %>
      <ul class="nav navbar-nav">
        <%= image_tag("logo", width: '360px', class: 'logo') %>
      </ul>
      <ul class="nav navbar-nav">
        <li class="nav-button col-md-1 col-sm-3" ><%= link_to 'Проекты', project_path %></li>
        <li class="nav-button col-md-1 col-sm-3" ><%= link_to 'Контакты', contact_path %></li>
        <li class="nav-button col-md-1 col-sm-3" ><%= link_to 'О нас', about_path %></li>
      </ul>
    </div>
  </nav>
  <div class="content">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </div>

</body>
</html>
