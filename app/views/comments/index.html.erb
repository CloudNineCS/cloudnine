<p id="notice"><%= notice %></p>

<h1 class="text-center ffh">Комментарии</h1>

<table class="table">
  <thead>
    <tr>
      <th>Text</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.text %></td>
        <td><%= comment.url %></td>
        <td><%= image_tag comment.logo.url(:medium) %></td>
        <td><%= link_to 'Show', comment %></td>
        <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
        <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="col-md-12 col-sm-12">
  <%= link_to 'New Comment', new_comment_path, class: "btn btn-default"%>
</div>

